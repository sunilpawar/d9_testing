{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}
<div{{ attributes.addClass(classes, 'field__items') }}>
  A combination {% if items | length == 1 %}including{% else %}of{% endif %}
  {% for item in items %}
    {% if loop.last and items | length > 1 %}
      and
    {% endif %}
    <span{{ item.attributes.addClass('field__item') }}>{{ item.content }}</span>{% if not loop.last and items | length > 2 %},{% endif %}
  {% endfor %}
</div>
